<UserControl x:Class="Locomotiv.View.TrainManagementWindowView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Locomotiv.View"
        mc:Ignorable="d"
        d:DesignHeight="600" d:DesignWidth="1000">
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="10"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Text="Trains à la station"
                       FontSize="20"
                       FontWeight="Bold"
                       Margin="0,0,0,10"
                       Grid.Row="0"/>

            <ListBox Grid.Row="1"
                     ItemsSource="{Binding Trains}"
                     SelectedItem="{Binding SelectedTrain}"
                     Margin="0,0,0,10">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Margin="5">
                            <TextBlock Text="{Binding TypeOfTrain, StringFormat='Type: {0}'}"
                                       FontWeight="Bold"/>
                            <TextBlock Text="{Binding State, StringFormat='État: {0}'}"/>
                            <TextBlock Text="{Binding PriotityLevel, StringFormat='Priorité: {0}'}"/>
                            <TextBlock>
                                <Run Text="Locomotives: "/>
                                <Run Text="{Binding Locomotives.Count, Mode=OneWay}"/>
                            </TextBlock>
                            <TextBlock>
                                <Run Text="Wagons: "/>
                                <Run Text="{Binding Wagons.Count, Mode=OneWay}"/>
                            </TextBlock>
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>

            <Button Grid.Row="2"
                    Content="Supprimer le train sélectionné"
                    Command="{Binding DeleteTrainCommand}"
                    Padding="10"
                    Background="#D32F2F"
                    Foreground="White"
                    FontWeight="Bold"/>
        </Grid>

        <Grid Grid.Column="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <TextBlock Text="Ajouter un nouveau train"
                       FontSize="20"
                       FontWeight="Bold"
                       Margin="0,0,0,10"
                       Grid.Row="0"/>

            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <TextBlock Text="Type de train:" FontWeight="Bold" Margin="0,0,0,5"/>
                    <ComboBox ItemsSource="{Binding TrainTypes}"
                              SelectedItem="{Binding NewTrainType}"
                              Margin="0,0,0,15"/>

                    <TextBlock Text="Niveau de priorité:" FontWeight="Bold" Margin="0,0,0,5"/>
                    <ComboBox ItemsSource="{Binding PriorityLevels}"
                              SelectedItem="{Binding NewTrainPriority}"
                              Margin="0,0,0,15"/>

                    <TextBlock Text="État du train:" FontWeight="Bold" Margin="0,0,0,5"/>
                    <ComboBox ItemsSource="{Binding TrainStates}"
                              SelectedItem="{Binding NewTrainState}"
                              Margin="0,0,0,15"/>

                    <TextBlock Text="Locomotives:" FontWeight="Bold" Margin="0,0,0,5"/>
                    <ListBox x:Name="LocomotivesListBox"
                             ItemsSource="{Binding AvailableLocomotives}"
                             SelectionMode="Multiple"
                             Height="120"
                             Margin="0,0,0,15">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <CheckBox Content="{Binding Code}"
                                          IsChecked="{Binding RelativeSource={RelativeSource AncestorType=ListBoxItem}, Path=IsSelected}"
                                          Tag="{Binding}"/>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                        <ListBox.ItemContainerStyle>
                            <Style TargetType="ListBoxItem">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="ListBoxItem">
                                            <ContentPresenter/>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </ListBox.ItemContainerStyle>
                    </ListBox>

                    <TextBlock Text="Wagons:" FontWeight="Bold" Margin="0,0,0,5"/>
                    <ListBox x:Name="WagonsListBox"
                             ItemsSource="{Binding AvailableWagons}"
                             SelectionMode="Multiple"
                             Height="120"
                             Margin="0,0,0,15">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <CheckBox Content="{Binding Code}"
                                          IsChecked="{Binding RelativeSource={RelativeSource AncestorType=ListBoxItem}, Path=IsSelected}"
                                          Tag="{Binding}"/>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                        <ListBox.ItemContainerStyle>
                            <Style TargetType="ListBoxItem">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="ListBoxItem">
                                            <ContentPresenter/>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </ListBox.ItemContainerStyle>
                    </ListBox>

                    <Button Content="Ajouter le train"
                            Command="{Binding AddTrainCommand}"
                            Padding="15"
                            Background="#4CAF50"
                            Foreground="White"
                            FontWeight="Bold"
                            FontSize="14"/>
                </StackPanel>
            </ScrollViewer>
        </Grid>
    </Grid>
</UserControl>
